<h1>New Movies</h1>

<form action="/movies/create" method="POST">
    <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input type="string" class="form-control" name="title">
        <small id="emailHelp" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Genre</label>
        <input type="string" class="form-control" id="exampleInputPassword1" name="genre">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Plot</label>
        <input type="string" class="form-control" id="exampleInputPassword1" name="plot">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Cast</label>
        {{#each allCelebrities}}
        <select name="cast" multiple>
            <option value="{{_id}}">{{name}}</option>
        </select>
        {{/each}}
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>